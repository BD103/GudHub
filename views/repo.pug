extends templates/repo.pug

block title
  title #{user}/#{repo}

block repo-content
  div(uk-grid)
    div.uk-width-2-3
      table.uk-table.uk-table-striped.uk-table-small
        tbody
          each folder in folders
            tr
              td(uk-icon="icon: folder")
              td
                a(href="#")= folder
              td
                a.uk-link-text(href="#") commit
              td time ago
          each file in files
            tr
              td(uk-icon="icon: file")
              td
                a(href="#")= file
              td
                a.uk-link-text(href="#") commit
              td time ago

    div.uk-width-1-3
      p.uk-text-lead About
      p Description of repo
      p
        span(uk-icon="info")
        a.uk-margin-left.uk-link-text(href="#") Readme
      p
        span(uk-icon="file-text")
        a.uk-margin-left.uk-link-text(href="#") License Name
      hr
      p.uk-text-lead Releases
      p.uk-text-meta No releases published
      hr
      p.uk-text-lead Languages
      p No clue how to do this lol
